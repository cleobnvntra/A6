<div class="row">
    <div class="col-md-12">
        <h2>{{departments.departmentName}} - Department: {{ departments.departmentId}}</h2>
        <hr/>
        <form method="post" action="/departments/update">
            <input id="departmentId" name="departmentId" value="{{departments.departmentId}}" type="hidden">
            <div class="form-group"></div>
                <label for="departmentName">Department Name</label>
                <input type="text" name="departmentName" value="{{departments.departmentName}}">
            </div>
            <hr/>
            <input type="submit" class="btn btn-primary pull-right" value="Update Department"/>
            <br/><br/><br/>
        </form>
    </div>
</div>